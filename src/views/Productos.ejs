<%- include('template/cabecera', { tituloWeb: 'Productos' }) %>

<div class="body-bg">
    <div class="content">
        <div class="container mt-5">
            <div class="text-center">
                <h1 class="display-4" style="color: #ff6f61;">Nuestros Productos</h1>
                <p class="lead">Descubre la mejor selección de accesorios para tus mascotas.</p>
                <p>Tenemos todo lo que necesitas para cuidar y consentir a tu amigo peludo.</p>
            </div>

            <% if (categorias && categorias.length > 0) { %>
                <% categorias.forEach(categoria => { %>
                    <div class="category-section mt-5">
                        <div class="category-box p-3 mb-4 bg-white shadow-sm">
                            <h2 class="category-title" style="color: #ff6f61;"><%= categoria.name %></h2>
                        </div>
                        <div class="row mt-4">
                            <% if (categoria.products && categoria.products.length > 0) { %>
                                <% categoria.products.forEach(producto => { %>
                                    <div class="col-md-4 mb-4">
                                        <div class="card shadow-sm">
                                            <img src="/img/<%= producto.image %>" class="card-img-top" alt="<%= producto.name %>">
                                            <div class="card-body">
                                                <h5 class="card-title"><%= producto.name %></h5>
                                                <p class="card-text"><%= producto.description %></p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="text-muted">$<%= producto.price %></span>
                                                    <button type="button" class="btn btn-primary">Comprar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p class="text-center">No hay productos disponibles en esta categoría.</p>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No hay categorías disponibles actualmente.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('template/footer') %>




